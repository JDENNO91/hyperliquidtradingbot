{
  "strategy": "zscore_mean_reversion",
  "data_file": "src/backtesting/data/ETH-PERP/ETH-PERP-1h.json",
  "trading": {
      "market": "ETH-PERP",
      "positionSize": 0.1,
      "leverage": 3,
      "leverageMode": "isolated",
