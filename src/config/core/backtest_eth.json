{
  "strategy": "bbrsi",
  "data_file": "src/backtesting/data/ETH-PERP/ETH-PERP-1m.json",
  "trading": {
      "market": "ETH-PERP",
      "positionSize": 0.1,
      "leverage": 5,
      "leverageMode": "isolated",
      "maxPositions": 10,               
      "timeframe": "1m",
      "profitTarget": 0.2,
      "testMode": true,
      "stop_loss_pct": 0.003,
      "take_profit_pct": 0.005,
      "max_consecutive_losses": 20,
      "use_volatility_sizing": true
  },
  "position_management": {
      "max_positions": 10,
      "allow_multiple": true,
      "auto_close_on_loss": false,
      "max_loss_percentage": 0.05
  },
  "indicators": {
      "rsi": {
          "period": 14,
          "overbought": 55,
          "oversold": 45,
          "extreme_overbought": 50,
          "extreme_oversold": 50
      },
      "bollinger": {
          "period": 20,
          "stdDev": 2
      },
      "adx": {
          "period": 14,
          "threshold": 3
      },
      "min_adx_trend": 2,
      "bb_squeeze_threshold": 0.0005,
      "volatility_lookback": 20
  },
  "database": {
      "path": "./db/backtest.db"
  },
  "logging": {
      "console": {
          "level": "info"
      },
      "file": {
          "level": "debug",
          "path": "./logs/backtest_debug.log"
      }
  },
  "backtest": {
      "initialCapital": 10000,
      "tradingFee": 0.001,
      "slippage": 0.0005,
      "startDate": "2024-01-01",
      "endDate": "2023-12-31",
      "maxDrawdown": 1.0
  }
}